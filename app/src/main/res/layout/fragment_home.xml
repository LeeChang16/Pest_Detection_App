<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ricefield"
    tools:context=".HomeFragment"
    >

    <!-- TODO: Update blank fragment layout -->

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/town_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="Calape"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/temp_reading"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_below="@id/town_name"
        android:text="39Â°"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:typeface="serif"
        android:textSize="90sp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/weather_today"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@id/temp_reading"
        android:text="Mostly Cloudy"
        android:textColor="#e0dcdc"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_width="380dp"
        android:layout_height="80dp"
        android:id="@+id/buttons_background"
        android:src="@drawable/background_square_2"
        android:alpha="0.7"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/imageView2"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:textSize="25sp"
        android:text="Quick Detection"
        android:id="@+id/quickdetection"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_above="@id/buttons_background"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="1dp"
        android:layout_height="60dp"
        android:src="@drawable/separator_line"
        android:layout_above="@id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/tocamera"
        android:clickable="true"
        android:layout_above="@id/imageView2"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/photo_camera"
        android:contentDescription="Open Camera to Capture an Image"
        />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/togallery"
        android:clickable="true"
        android:background="@drawable/baseline_file_upload_24"
        android:layout_above="@id/imageView2"
        android:layout_toRightOf="@id/tocamera"
        android:layout_marginStart="140dp"
        android:layout_marginBottom="15dp"
        android:contentDescription="Choose an Image from Gallery"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="420dp"
        android:layout_height="350dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:alpha="0.7"
        android:src="@drawable/background_square" />

    <TextView
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:textSize="19sp"
        android:textStyle="bold"
        android:layout_below="@id/buttons_background"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Recent Detections"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recent"
        android:layout_width="380dp"
        android:layout_height="230dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"/>
    <RelativeLayout
        android:id="@+id/errormsg"
        android:layout_width="370dp"
        android:layout_height="230dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:padding="10dp"
        android:visibility="invisible"
        android:background="@drawable/background_btn_intro6"
        android:alpha="0.7">

        <TextView
            android:id="@+id/label2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="No recent activities to show."
            android:textAlignment="center"
            android:textColor="@color/charcoal"
            android:textSize="15sp"
            android:textStyle="bold"
            android:typeface="monospace" />
    </RelativeLayout>





</RelativeLayout>

    <RelativeLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="@drawable/background_btn_intro7">

        <TextView
            android:id="@+id/preparing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Preparing Image"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginTop="250dp"/>
        <ProgressBar
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/preparing"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>



</FrameLayout>