<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pest_info"
    android:background="@drawable/ricefield">

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="match_parent"
        >

    <ImageView
        android:id="@+id/pest_Image"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/pest_Name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Pest Name"
        android:textSize="25sp"
        android:layout_below="@id/pest_Image"
        android:textAlignment="center"
        />

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/pest_Name"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_1"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:text="Scientific Name:"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:textAlignment="textStart"
            />

        <TextView
            android:id="@+id/scientific_Name"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text=""
            android:textSize="20sp"
            android:textAlignment="textStart"
            android:layout_marginEnd="10dp"
            />

    </LinearLayout>

        <LinearLayout
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/line1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label2"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:text="Family:"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:textAlignment="textStart"
                />

            <TextView
                android:id="@+id/pest_Family"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text=""
                android:textSize="20sp"
                android:textAlignment="textStart"
                android:layout_marginEnd="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/line2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label3"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:text="Order:"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:textAlignment="textStart"
                />

            <TextView
                android:id="@+id/pest_Order"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text=""
                android:textSize="20sp"
                android:textAlignment="textStart"
                android:layout_marginEnd="10dp"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/label4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Description"
            android:textSize="25sp"
            android:layout_below="@id/line3"
            android:layout_marginTop="20dp"
            android:textAlignment="textStart"
            />

        <TextView
            android:id="@+id/pest_Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/label4"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/label5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Intervention"
            android:textSize="25sp"
            android:layout_below="@id/pest_Description"
            android:layout_marginTop="20dp"
            android:textAlignment="textStart"
            />

        <TextView
            android:id="@+id/pest_Intervention"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/label5"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/label6"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Reference/s"
            android:textSize="25sp"
            android:layout_below="@id/pest_Intervention"
            android:layout_marginTop="20dp"
            android:textAlignment="textStart"
            />
        <TextView
            android:id="@+id/pest_Reference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/label6"
            android:layout_marginTop="10dp"
            android:autoLink="web"/>


    </RelativeLayout>


</ScrollView>