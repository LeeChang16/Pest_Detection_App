<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_btn_intro">

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/image_holder"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="10dp"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/pest_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@color/lavender"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/pest_name"
        android:text="Name"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/image_holder"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/pest_scientific_name"
        android:text="Scientific Name"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/image_holder"
        android:layout_below="@id/pest_name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"/>

</RelativeLayout>