<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/farmer_background"
    tools:context=".Analysis">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        >


            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:alpha="0.7"
                android:elevation="30dp"
                android:background="@drawable/background_btn_intro6"
                app:cardCornerRadius="30dp"
                android:layout_centerHorizontal="true"
                >
                
                <com.jjoe64.graphview.GraphView
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/linegraph"
                    android:layout_width="330dp"
                    android:layout_height="375dp"
                    />

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_below="@id/card1"
                android:id="@+id/relative1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:background="@drawable/background_btn_intro"
                    android:alpha="0.7"/>
                <TextView
                    android:id="@+id/label1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/charcoal"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Total Detected \nPest"/>
                <TextView
                    android:id="@+id/total_pest"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/charcoal"
                    android:layout_below="@id/label1"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:textSize="50sp"
                    android:text="10"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@id/card1"
                android:id="@+id/relative2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/relative1"
                android:layout_marginStart="10dp">
                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:background="@drawable/background_btn_intro"
                    android:alpha="0.7"/>
                <TextView
                    android:id="@+id/label2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:textColor="@color/charcoal"
                    android:layout_marginTop="10dp"
                    android:text="Most Detected \nPest"/>
                <TextView
                    android:id="@+id/most_detected"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/charcoal"
                    android:layout_below="@id/label2"
                    android:layout_marginTop="30dp"
                    android:layout_centerHorizontal="true"
                    android:textSize="25sp"
                    android:text="Stemborer"/>

            </RelativeLayout>

        <RelativeLayout
            android:id="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_btn_intro6"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/relative2"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/label11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pest Ranking"
                android:layout_alignParentTop="true"
                android:textSize="18sp"
                android:textColor="@color/charcoal"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/label12"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="Pest Name"
                android:textSize="15sp"
                android:layout_below="@id/label11"
                android:textColor="@color/charcoal"
                android:textAlignment="textStart"/>
            <TextView
                android:id="@+id/label13"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Frequency"
                android:textSize="15sp"
                android:layout_below="@id/label11"
                android:textColor="@color/charcoal"
                android:layout_toRightOf="@id/label12"
                android:textAlignment="textStart"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ranking_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/label12"/>

        </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card2"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_btn_intro6"
                android:padding="10dp">

        <!--        <ImageView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="ma"-->
        <!--            android:background="@drawable/background_btn_intro"-->
        <!--            android:alpha="0.7"-->
        <!--            android:layout_centerInParent="true"/>-->
                <TextView
                    android:id="@+id/label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/charcoal"
                    android:text="Recommendations:\n"/>
                <TextView
                    android:id="@+id/recommendation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_below="@id/label"
                    android:textColor="@color/charcoal"
                    android:justificationMode="inter_word"
                    android:padding="5dp"/>

            </RelativeLayout>

    </RelativeLayout>
</ScrollView>