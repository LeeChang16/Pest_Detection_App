<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:id="@+id/root_layout"
    android:layout_height="800dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
<!--        <ImageView-->
<!--            android:layout_width="450dp"-->
<!--            android:layout_height="match_parent"-->
<!--            android:alpha="0.6"-->
<!--            android:background="@drawable/dark_background"/>-->

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/background_btn_intro4"
        android:padding="10dp">
        <!--                <ImageView-->
        <!--                    android:layout_width=""-->
        <!--                    android:layout_height="match_parent"-->
        <!--                    android:src="@drawable/background_btn_intro"-->
        <!--                    android:layout_centerInParent="true"-->
        <!--                    android:alpha="0.7"/>-->

        <TextView
            android:id="@+id/popup_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:paddingStart="10dp"
            android:text="Sign Out"
            android:textAlignment="textStart"
            android:textColor="@color/charcoal"
            android:textSize="23sp"
            android:textStyle="bold" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_below="@+id/popup_title"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/new_background_lightgreen">

            <TextView
                android:id="@+id/popup_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingStart="10dp"
                android:text="Are you sure you want to logout?"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/yes"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="180dp"
                android:layout_toLeftOf="@id/no"
                android:background="@drawable/new_background_mintgreen"
                android:text="Yes" />

            <Button
                android:id="@+id/no"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/new_background_mintgreen"
                android:text="No" />

        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>